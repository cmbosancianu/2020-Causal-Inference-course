df_fr <- df_ess %>% 
  rename(female = gndr) %>% 
  mutate(female = case_when(female == 1 ~ 0,
                            female == 2 ~ 1)) %>% 
  mutate(race_intel = case_when(smegbli == 1 ~ 1,
                                smegbli == 2 ~ 0),
         race_work = case_when(smegbhw == 1 ~ 1,
